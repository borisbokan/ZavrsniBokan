<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvNazivStavkka_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slikaStavkka"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/slikaStavkka"
        android:layout_toRightOf="@+id/slikaStavkka"
        android:gravity="center_vertical"
        android:hint="Naziv stavkka"
        android:padding="7dp"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtOpisStavkka_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txvNazivStavkka_lista"
        android:layout_alignStart="@+id/txvNazivStavkka_lista"
        android:layout_below="@+id/txvNazivStavkka_lista"
        android:gravity="start"
        android:hint="Opis stavkka"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textStyle="normal|italic" />

    <ImageView
        android:id="@+id/slikaStavkka"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>